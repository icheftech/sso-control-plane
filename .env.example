# S.S.O. Control Plane - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===================
# Database Configuration
# ===================
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://sso_user:${POSTGRES_PASSWORD}@postgres:5432/sso_control_plane

# ===================
# Redis Configuration  
# ===================
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ===================
# Application Security
# ===================
SECRET_KEY=your-secure-secret-key-min-32-chars-change-in-production
ENVIRONMENT=development  # Options: development, staging, production

# ===================
# Microsoft Entra ID (Azure AD) - SSO Authentication
# ===================
ENTRA_TENANT_ID=your-azure-tenant-id
ENTRA_CLIENT_ID=your-azure-client-id
ENTRA_CLIENT_SECRET=your-azure-client-secret
ENTRA_REDIRECT_URI=http://localhost:8000/auth/callback

# ===================
# API Configuration
# ===================
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ===================
# Celery Configuration
# ===================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ===================
# Audit & Compliance
# ===================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for HIPAA compliance
ENABLE_CRYPTOGRAPHIC_AUDIT=true

# ===================
# Kill Switch Configuration
# ===================
ENABLE_KILL_SWITCHES=true
DEFAULT_KILL_SWITCH_MODE=HARD_STOP  # Options: HARD_STOP, DEGRADE

# ===================
# Break Glass Configuration
# ===================
BREAK_GLASS_MAX_DURATION_HOURS=4
BREAK_GLASS_REQUIRE_POST_REVIEW=true

# ===================
# Monitoring & Logging
# ===================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_METRICS=true
METRICS_PORT=9090

# ===================
# Development Only (DO NOT USE IN PRODUCTION)
# ===================
# SKIP_AUTH=false
# DEBUG=false
